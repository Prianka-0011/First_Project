@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<section class="pool-area section-padding-100 bg-img bg-fixed" style="background-image: url(/Content/Customer/img/bg-img/bg-3.jpg);">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-12 col-lg-7">
                <div class="pool-content text-center wow fadeInUp" data-wow-delay="300ms">
                    <div class="section-heading text-center white">
                        <div class="line-"></div>
                        <h2 class="text-primary">Register Here</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-10">
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <p asp-for="Name" class="text-white text-left">Name</p>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                               
                                <div class="form-group">
                                    <p asp-for="Address" class="text-white text-left">Address</p>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p asp-for="Email" class="text-white text-left">Email</p>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p asp-for="ContactNo" class="text-white text-left">ContactNo</p>
                                    <input asp-for="ContactNo" class="form-control" />
                                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p asp-for="NidOrPassport" class="text-white text-left">NidOrPassport</p>
                                    <input asp-for="NidOrPassport" class="form-control" />
                                    <span asp-validation-for="NidOrPassport" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p asp-for="Password" class="text-white text-left">Password</p>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p asp-for="ConfirmPassword" class="text-white text-left">ConfirmPassword</p>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn palatin-btn mt-50 btn-success">Register</button>
                            </form>
                        </div>
                    </div>

                    @section Scripts {
                        @await Html.PartialAsync("_ValidationScriptsPartial")
                    }
                </div>
            </div>
        </div>
    </div>
</section>