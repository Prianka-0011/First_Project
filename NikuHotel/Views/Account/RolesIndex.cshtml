@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RolesIndex";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}





@if (Model.Any())
{
    
    <div class="row">
       
        <div class="col-md-12">
            <h2 class="text-center text-dark">Roles</h2><br><br>
            <div class="table-bordered bg-fixed bg-dark"><br><br>
                <div class="col-md-8">
                    <table class="table table-responsive table-hover">
                        <thead class=" bg-danger text-white">
                            <tr class="text-white">
                                <td>Action</td>
                                <td>Role Name</td>
                                <td>Id</td>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="text-white">
                                <td><a class="btn btn-outline-warning btn-toolbar" asp-action="EditRole" asp-controller="Account" asp-route-Id="@item.Id">Edit</a></td>
                                <td>@item.Name</td>
                                <td>@item.Id</td>


                            </tr>
                            }

                        </tbody>
                    </table><br><br>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles YEs
        </div>
        <div class="card-body">
            <a asp-action="CreateRole" asp-controller="Account" class="btn btn-primary" style="width:auto" >Create Role</a>
        </div>
    </div>
}

