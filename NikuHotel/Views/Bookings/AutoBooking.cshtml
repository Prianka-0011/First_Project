@model NikuHotel.ViewModel.AutoBookings
@{
    ViewData["Title"] = "AutoBooking";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    DateTime systemDate = System.DateTime.Today;
}




<section class="pool-area section-padding-100 bg-img bg-fixed" style="background-image: url(/Content/Customer/img/bg-img/bg-7.jpg);">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-12 col-lg-7">
                <div class="pool-content text-center wow fadeInUp" data-wow-delay="300ms">
                    <div class="section-heading text-center white">
                        <div class="line-"></div>
                        <h2 class="text-warning">Book Now</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-4">
                            <section>
                                <form asp-action="AutoBooking" asp-controller="Bookings" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <p asp-for="BookingDate" class="text-white text-left">BookingDate</p>
                                    <div class="form-group">

                                        <input asp-for="BookingDate" type="datetime" readonly class="form-control" value="@systemDate" />
                                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                                    </div>
                                    <p asp-for="CheckInTime" class=" text-white text-left">CheckInTime</p>

                                    <div class="form-group">
                                        <input asp-for="CheckInTime" class="form-control" />
                                        <span asp-validation-for="CheckInTime" class="text-danger"></span>
                                    </div>
                                    <p asp-for="CheckOutTime" class=" text-white text-left">CheckOutTime</p>

                                    <div class="form-group">
                                        <input asp-for="CheckOutTime" class="form-control" />
                                        <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Book Now" class="btn btn-success" />
                                    </div>
                                </form>
                            </section>
                        </div>

                    </div>

                    @section Scripts {
                        @await Html.PartialAsync("_ValidationScriptsPartial")
                    }
                </div>
            </div>
        </div>
    </div>
</section>